<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.ispw.efco.nottitranquille.controller.EmployeeDetails">
    <children>
        <Pane fx:id="bAddAuth" layoutX="4.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
            <children>
                <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="600.0">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="bClose" onAction="#logoutHandler" mnemonicParsing="false"
                                          text="Close"/>
                                <MenuItem fx:id="bBack" onAction="#backButton" mnemonicParsing="false" text="Back"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>
                        <Menu fx:id="mAcc" mnemonicParsing="false" text="Account">
                            <items>
                                <MenuItem fx:id="bLogOut" mnemonicParsing="false" onAction="#logoutHandler"
                                          text="Log Out"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <TextField fx:id="tvName" layoutX="88.0" layoutY="33.0" promptText="Name"/>
                <TextField fx:id="tvSurname" layoutX="300.0" layoutY="33.0" promptText="Surname"/>
                <TextField fx:id="tvMail" layoutX="88.0" layoutY="67.0" promptText="E-Mail"/>
                <TextField fx:id="tvPhone" layoutX="300.0" layoutY="67.0" promptText="Phone Number"/>
                <ComboBox fx:id="spGender" layoutX="299.0" layoutY="107.0" prefWidth="150.0" promptText="Gender"/>
                <TextField fx:id="tvUsername" layoutX="88.0" layoutY="141.0" promptText="Username"/>
                <TextField fx:id="tvPassword" layoutX="300.0" layoutY="141.0" promptText="Password"/>
                <TextField fx:id="tvNation" layoutX="88.0" layoutY="176.0" promptText="Nation"/>
                <TextField fx:id="tvCity" layoutX="300.0" layoutY="176.0" promptText="Ciity"/>
                <TextField fx:id="tvAddress" layoutX="88.0" layoutY="207.0" promptText="Address"/>
                <TextField fx:id="tvPostalCode" layoutX="300.0" layoutY="207.0" promptText="Postal Code"/>
                <ComboBox fx:id="spRole" layoutX="87.0" layoutY="286.0" prefWidth="150.0" promptText="Choose a Role"/>
                <Button fx:id="bAccept" layoutX="274.0" layoutY="353.0" mnemonicParsing="false" onAction="#saveEmployee"
                        text="Accept"/>
                <TableView fx:id="lvAuth" layoutX="249.0" layoutY="262.0" prefHeight="73.0" prefWidth="200.0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <Button fx:id="bRemoveAuth" disable="true" layoutX="458.0" layoutY="311.0" mnemonicParsing="false"
                        onAction="#removeRole" text="Remove Authorization"/>
                <MenuButton fx:id="spAddAuth" disable="true" layoutX="457.0" layoutY="262.0" mnemonicParsing="false"
                            popupSide="TOP" text="Add Authorizations">
                </MenuButton>
                <TextField fx:id="tvBirthdate" layoutX="88.0" layoutY="107.0" promptText="Birthdate(dd-MM-yyyy)"/>
                <Text fx:id="errAlert" fill="#e80909" layoutX="98.0" layoutY="370.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="All Fields MUST be filled" visible="false"/>
            </children>
        </Pane>
    </children>
</AnchorPane>
